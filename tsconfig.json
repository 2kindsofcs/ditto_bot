{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"allowJs": false,
		"declaration": false,
		"sourceMap": true,
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017"
		],
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"strictNullChecks": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noErrorTruncation": true,
		"noUnusedLocals": true,
		"baseUrl": "./types"
	},
	"include": [
		"./src/**/*"
	]
}

{
  "name": "ditto_bot",
  "version": "1.0.0",
  "description": "slack bot",
  "main": "./src/main.ts",
  "scripts": {
    "prebuild": "npm run lint && npm run test",
    "build": "webpack",
    "build:watch": "cross-env NODE_ENV=dev npm run build -- --watch",
    "prestart": "npm run build",
    "start": "pm2 start ./app.json",
    "stop": "pm2 stop ./app.json",
    "start:dev": "nodemon ./dist/main.js",
    "watch": "concurrently \"npm run build:watch\" \"npm run start:dev\"",
    "lint": "tslint -p ./tsconfig.json",
    "test": "cross-env NODE_ENV=test TS_NODE_PROJECT=test/tsconfig.json TS_NODE_FILES=true nyc mocha --require ts-node/register \"test/**/*.ts\"",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shipduck/ditto_bot.git"
  },
  "author": "shipduck",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shipduck/ditto_bot/issues"
  },
  "homepage": "https://github.com/shipduck/ditto_bot#readme",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/dotenv-webpack": "^1.7.0",
    "@types/express": "^4.17.0",
    "@types/ioredis": "^4.0.12",
    "@types/mocha": "^5.2.7",
    "@types/node-fetch": "^2.3.5",
    "@types/raven": "^2.5.3",
    "@types/winston": "^2.4.4",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.17.1",
    "ioredis-mock": "^4.12.0",
    "mocha": "^6.1.4",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@slack/client": "^5.0.1",
    "ioredis": "^4.10.0",
    "winston": "^3.2.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/main.ts"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "optionalDependencies": {
    "raven": "^2.6.4",
    "winston-raven-sentry": "^2.0.0"
  }
}
